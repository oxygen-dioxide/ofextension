{
	"name": "ofextension",
	"displayName": "OFextension",
	"description": "OpenFOAM求解器插件。可自动配置includePath（基于C/C++插件），实现OpenFOAM求解代码跳转、悬停提示；可自动配置调试相关选项，用于gdb调试代码。",
	"version": "0.0.1",
	"engines": {
		"vscode": "^1.55.0"
	},
	"categories": [
		"Debuggers","Other"
	],
	"activationEvents": [
		"onCommand:ofextension.helloWorld",
		"onCommand:ofextension.ofInit"
	],
	"main": "./src/extension.js",
	"contributes": {
		"configuration": {
			"type": "object",
			"title": "OFextension",
			"properties": {
				"ofextension.OFpath": {
					"type": "string",
					"default": "/opt/openfoam8",
					"description": "OpenFOAM安装目录"
				},
				"ofextension.GDBpath": {
					"type": "string",
					"default": "/usr/bin/gdb",
					"description": "指定gdb的路径。默认使用系统路径下的gdb，如果想使用自己编译的版本，可以自定义该路径。"
				}
			}
		},
		"commands": [
			{
				"command": "ofextension.helloWorld",
				"title": "Hello World"
			},
			{
				"command": "ofextension.ofInit",
				"title": "ofInit"
			}
		],
		"taskDefinitions": [
			{
				"type": "ofwmake",
				"required": [
					"label",
					"command"
				],
				"properties": {
					"label": {
						"type": "string",
						"description": "label: ofBuild"
					},
					"command": {
						"type": "array",
						"description": "commands array"
					},
					"args":{
						"type": "array",
						"description": "args array"
					},
					"options": {
						"type": "object",
						"description": "options",
						"properties": {
							"cwd": {
								"type": "string",
								"description": "properties of cwd"
							}
						}
					},
					"problemMatcher": {
						"type": "array",
						"description": "problemMatcher"
					},
					"group": {
						"type":"object",
						"description": "group",
						"properties": {
							"kind": {
								"type":"string",
								"description": "group kind"
							},
							"isDefault": {
								"type":"boolean",
								"description": "group isDefault"
							}
						}
					},
					"detail": {
						"type": "string",
						"description": "Task generated by ofextension."
					}
				}
			}
		]
	},
	"scripts": {
		"lint": "eslint .",
		"pretest": "npm run lint",
		"test": "node ./test/runTest.js"
	},
	"devDependencies": {
		"@types/vscode": "^1.55.0",
		"@types/glob": "^7.1.3",
		"@types/mocha": "^8.0.4",
		"@types/node": "^12.11.7",
		"eslint": "^7.19.0",
		"glob": "^7.1.6",
		"mocha": "^8.2.1",
		"typescript": "^4.1.3",
		"vscode-test": "^1.5.0"
	}
}
